<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="myBean" class="com.example.demo.GreetingService"/>
    <bean id="emailNotificationService" class="com.example.loose.EmailNotificationService" />
    <bean id="userServiceEmail" class="com.example.loose.UserService">
        <property name="notificationService" ref="emailNotificationService" />
    </bean>
    <bean id="smsNotificationService" class="com.example.loose.SMSNotificationService"/>
    <bean id="userServiceSMS" class="com.example.loose.UserService">
        <constructor-arg ref="smsNotificationService"/>
    </bean>



</beans>